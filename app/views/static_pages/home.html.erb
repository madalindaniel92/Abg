<% provide(:title, 'Games,books and anime') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/comment_form' %>        
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Games,books and anime</h1>

    <%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("logo.png", alt: "Logo"), '#' %>
<% end %>
